<h1>Add a new order to @Model.Name</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="title">Order Title</label>
  <input id="title" name="title" type="text">
  <label for="description">Order descripton</label>
  <input id="description" name="description" type="text">
  <label for="price">Order price</label>
  <input id="price" name="price" type="number">
  <button type='submit'>Add Order</button>
</form>